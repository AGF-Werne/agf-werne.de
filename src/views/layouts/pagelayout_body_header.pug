// layout/pagelayout_body_header
block header
  - var url_homepage = "index.html"
  - var url_facebook = "https://www.facebook.com/AGFWerne"
  - var url_email = "mailto:agfwerne@gmx.de"
  header.container.header
    div.d-sm-flex.justify-content-between
      div.agf-logo.p-2.mt-4
        a(href=url_homepage)
          img.image.h-1(src="img/agf-logo-sm.png")/
      div.agf-contact.p-2.fa-3x
        a(href=url_facebook, target="_blank")
          span.fa-layers.fa-fw
            i.fas.fa-circle.c-facebook
            i.fab.fa-facebook-f.text-white(data-fa-transform="shrink-6")
        a(href=url_email, target="_top")
          span.fa-layers.fa-fw
            i.fas.fa-circle.c-about
            i.far.fa-envelope.text-white(data-fa-transform="shrink-6")
// / layout/pagelayout_body_header
extends layouts/pagelayout.pug

block title
  title AGF&nbsp;Werne&nbsp;e.&nbsp;V. - Startseite

block content
  - var calendar = "https://calendar.google.com/calendar/embed?showTitle=0&showPrint=0&showCalendars=0&showTz=0&height=400&wkst=2&hl=de&bgcolor=%23ffffff&src=agfwernecalender%40gmail.com&color=%231B887A&ctz=Europe%2FBerlin"
  // index
  h2 Aktuelles
  div.card.mt-5
    div.card-header
      h3 Jahreshauptversammlung 2018
    div.card-body
      blockquote.blockquote.mb-0
        p Wir laden alle Mitglieder des AGF Werne e.V., aber selbstverständlich auch alle anderen Mitstreiter und Interessierte zur Jahreshauptversammlung der AGF am 29.1.2018 um 19.00 Uhr in der Cafeteria des Stadthauses ein.
        footer.blockquote-footer 17.01.2018 - <cite title="Author">Anne</cite>
  div.card.mt-5
    div.card-header
      h3 Sitzung des erweiterten Vorstands
    div.card-body
      blockquote.blockquote.mb-0
        p Wir laden alle interessierten zur Sitzung des erweiterten Vorstands am Montag, den 29.11. um 19 Uhr ins B-Treff ein.
        footer.blockquote-footer 28.09.2017 - <cite title="Author">Danilo</cite>
  div.card.mt-5
    div.card-header
      h3 Belegungsplan und Öffnungszeiten
    div.card-body
      blockquote.blockquote.mb-0
        p Wir haben sowohl die <a href="http://agf-werne.de/#/contact">Öffnungszeiten als auch den Belegungsplan</a> aktualisiert.
        footer.blockquote-footer 25.11.2017 - <cite title="Author">Danilo</cite>
  h2.mt-5 Kalender
  div.embed-responsive.embed-responsive-21by9.mt-3
    iframe(src!=calendar, style="border-width:0", width="600", height="400", frameborder="0", scrolling="no")
  // / index